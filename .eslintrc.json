{
    "parser": "babel-eslint",
    "rules": {
            "react/jsx-wrap-multilines": [0],
            "array-bracket-spacing": [
                    2,
                    "always",
                    { "objectsInArrays": true }
            ],
            "arrow-parens": [
                    2,
                    "as-needed"
            ],
            "key-spacing": [
                    2,
                    { "align": "value" }
            ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-tabs":[0],
        "no-unused-vars": [
          1,
          {
            "args": "none"
          }
        ],
        "one-var": [
          1,
          "never"
        ],
        "max-len": [1, 150],
        "no-multi-spaces": [0],
        "no-multiple-empty-lines": [
                2,
                { "max": 3, "maxEOF": 0 }
        ],
        "no-use-before-define" :[
          0
        ],
        "no-param-reassign" : [
          0
        ],
        "no-trailing-spaces": [
                2,
                { "skipBlankLines": true }
        ],
        "indent": [
          "warn",
          "tab",
          { "SwitchCase": 1 }
        ],
        "new-cap": [
          "error",
		  {
				"capIsNew": false,
			  "capIsNewExceptions": ["StyleSheetPropType"] }
        ],
        "no-underscore-dangle": [
          "error", {
            "allowAfterThis": true,
            "allowAfterSuper": true,
            "allow": ["_id"]
          }
        ],
        "no-plusplus": [0],
        "no-bitwise": [0],
        "no-nested-ternary": [0],
        "no-confusing-arrow": [0],
        "consistent-return": [0],
        "no-console" : [0],
        "no-restricted-syntax": [
          2,
          "ForInStatement",
          "WithStatement"
        ],
        "no-labels": [0],
        "no-loop-func": [0],
        "react/jsx-closing-bracket-location": [
                2,
                "after-props"
        ],
        "react/jsx-curly-spacing": [
                1, "always", { "spacing": { "objectLiterals": "never" }}
        ],
        "react/jsx-filename-extension": [
          1, { "extensions": [".js", ".jsx"] }
        ],
        "react/jsx-indent": [
                2,
                "tab"
        ],
        "react/jsx-indent-props": [
                2,
                "tab"
        ],
        "react/jsx-no-bind": [0, {
          "ignoreRefs": true,
          "allowArrowFunctions": true,
          "allowBind": true
        }],
		"react/prefer-stateless-function": [
			1,
			{ "ignorePureComponents": true }
		],
        "react/no-unused-prop-types": [2, {
          "customValidators": [
          ],
          "skipShapeProps": true
        }],
        "react/prop-types": [0],
        
        "space-in-parens": [
                0,
                "always",
                { "exceptions": ["()", "empty"] }
        ],
        "spaced-comment": [
                2,
                "always",
                { "exceptions": [ "=", "-" ] }
        ],
        "template-curly-spacing": [
                2,
                "always"
        ],

        "import/imports-first" : [
          0
        ],
        "import/no-extraneous-dependencies" : [
          0,
          {"devDependencies": true}
        ],
        "generator-star-spacing": [0]
    },
    "settings": {
      "import/core-modules": [ "dismissKeyboard" ],
      "import/resolver":{
        "node":{
          "extensions": [
            ".js"
          ]
	  	},
		"webpack": {
			"config": "config/webpack.config.dev.js"
		}
      }
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "env": {
        "es6": true,
        "browser": true
    },
    "ecmaFeatures": {
      "jsx": true
    },
    "globals": {
      "requestAnimationFrame": true,
      "setTimeout": true,
      "navigator": true,
      "document": true,
      "VRFrameData": true
    }
}
